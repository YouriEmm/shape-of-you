{% extends 'base.html.twig' %}

{% block title %}Créer un utilisateur{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-50 dark:bg-gray-900">
        <div class="max-w-lg w-full bg-gray-100 dark:bg-gray-800 p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold text-center text-gray-900 dark:text-white mb-6">Créer un compte</h2>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                <div>
                    {{ form_label(form.name, 'Nom', {'label_attr': {'class': ' text-gray-700 dark:text-white mb-1'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                </div>

                <div>
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': ' text-gray-700 dark:text-white mb-1'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                </div>

                <div>
                    {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': ' text-gray-700 dark:text-white mb-1'}}) }}
                    {{ form_widget(form.password, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                </div>

                <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg">Créer</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
