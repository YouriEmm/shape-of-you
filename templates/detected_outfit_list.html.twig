{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4 dark:text-white">Historique des Vêtements Analysés</h1>

    {% if detectedOutfits is not empty %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mr-4">
            {% for outfit in detectedOutfits %}
                <div class="border p-4 rounded-lg shadow-lg bg-white dark:bg-gray-800 dark:text-gray-300">
                    <div class="mt-4">
                        <ul class="space-y-4">
                            {% for clothing in outfit.detectedItems %}
                                <li class="bg-gray-100 dark:bg-gray-700 p-4 rounded">
                                    <strong class="dark:text-white text-lg">{{ clothing.Nom }}</strong>
                                    <p class="text-gray-500 dark:text-gray-300">Marque : {{ clothing.Marque }}</p>
                                    <p class="text-gray-500 dark:text-gray-300">Catégorie : {{ clothing.categorie }}</p>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="dark:text-gray-300">Aucun outfit détecté trouvé.</p>
    {% endif %}
{% endblock %}
